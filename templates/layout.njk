<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Site identity -->
  <title>{{ page.title }}</title>
  <meta name="description" content="{{ meta.siteDescription }}">
  <link rel="icon" href="{{ meta.siteIcon }}">

  <!-- Metadata -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- CSS -->
  <link rel="stylesheet" href="{{ config.stylesheet }}">

  <!-- JS -->
  <script type="application/javascript" src="{{ config.bundle }}" defer></script>
</head>

<body>
  <header class="header">
    <img src="/images/RSD-logo.png" alt="R.S.D." class="header__logo">
    <h1 class="header__company-name">Re-Style Decorators</h1>
  </header>
  {% block body %}{% endblock %}
</body>

</html>
